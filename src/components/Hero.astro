---
import { marked } from 'marked';
import siteConfig from '../data/site-config';
import Button from './Button.astro';

const hero = siteConfig.hero;
---

{(hero?.title || hero?.image?.src || hero?.text || (hero?.actions && hero.actions.length > 0)) && (
  <section class="w-full flex flex-col items-center text-center gap-6 sm:gap-8 mb-16 sm:mb-24 px-4">
    
    {hero.image?.src && (
      <figure class="w-36 h-36 sm:w-40 sm:h-40 rounded-full overflow-hidden border-4 border-gray-200 shadow-lg mb-4">
        <img
          src={hero.image.src}
          loading="lazy"
          decoding="async"
          alt={hero.image.alt || ''}
          class="w-full h-full object-cover"
        />
        {hero.image.caption && (
          <figcaption class="mt-2 text-xs text-gray-500">
            {hero.image.caption}
          </figcaption>
        )}
      </figure>
    )}

    {hero.title && (
      <h1 class="text-3xl sm:text-5xl font-serif font-bold text-gray-900 leading-tight tracking-tight">
        {hero.title}
      </h1>
    )}

    {hero.text && (
      <div class="max-w-3xl prose prose-neutral sm:prose-lg text-gray-700 leading-relaxed" set:html={marked.parse(hero.text)} />
    )}

    {hero.actions && hero.actions.length > 0 && (
      <div class="flex flex-wrap justify-center gap-4 mt-4">
        {hero.actions.map((action) => (
          <Button href={action.href}>{action.text}</Button>
        ))}
      </div>
    )}
  </section>
)}

