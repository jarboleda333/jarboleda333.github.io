---
import { marked } from 'marked';
import siteConfig from '../data/site-config';
import Button from './Button.astro';

const hero = siteConfig.hero;
---

{(hero?.title || hero?.image?.src || hero?.text || (hero?.actions && hero.actions.length > 0)) && (
  <section class="w-full flex flex-col items-center gap-6 sm:gap-8 mb-16 sm:mb-24 text-center">
    
    {hero.image?.src && (
      <figure class="w-36 h-36 sm:w-40 sm:h-40 rounded-full overflow-hidden border-4 border-gray-200 dark:border-gray-600 shadow-lg mb-4">
        <img
          src={hero.image.src}
          loading="lazy"
          decoding="async"
          alt={hero.image.alt || ''}
          class="w-full h-full object-cover"
        />
        {hero.image.caption && (
          <figcaption class="mt-2 text-xs text-gray-500 dark:text-gray-400">
            {hero.image.caption}
          </figcaption>
        )}
      </figure>
    )}

    {hero.title && (
      <h1 class="text-3xl leading-tight font-serif font-medium sm:text-5xl sm:leading-tight dark:text-white">
        {hero.title}
      </h1>
    )}

    {hero.text && (
      <div
        class="max-w-2xl prose prose-neutral dark:prose-invert sm:prose-lg"
        set:html={marked.parse(hero.text)}
      />
    )}

    {hero.actions && hero.actions.length > 0 && (
      <div class="flex flex-wrap justify-center gap-4">
        {hero.actions.map((action) => (
          <Button href={action.href}>{action.text}</Button>
        ))}
      </div>
    )}
  </section>
)}


