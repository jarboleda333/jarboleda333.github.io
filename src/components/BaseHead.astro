---
{
  (hero?.title || hero?.image?.src || hero?.text || (hero?.actions && hero.actions.length > 0)) && (
    <section class="w-full text-center py-20 flex flex-col items-center gap-6 mb-16 sm:mb-24">
      
      {hero.image?.src && (
        <div class="w-32 h-32 sm:w-40 sm:h-40 rounded-full overflow-hidden shadow-md">
          <img
            src={hero.image.src}
            loading="lazy"
            decoding="async"
            alt={hero.image.alt || ''}
            class="w-full h-full object-cover"
          />
        </div>
      )}

      {hero.title && (
        <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900 dark:text-white">
          {hero.title}
        </h1>
      )}

      {hero.text && (
        <p class="max-w-2xl text-lg sm:text-xl text-gray-600 dark:text-gray-300">
          {hero.text}
        </p>
      )}

      {hero.actions && hero.actions.length > 0 && (
        <div class="flex flex-wrap justify-center gap-4 mt-4">
          {hero.actions.map((action) => (
            <Button href={action.href}>{action.text}</Button>
          ))}
        </div>
      )}
    </section>
  )
}
