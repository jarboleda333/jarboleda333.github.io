---
import { type CollectionEntry } from 'astro:content';
import ArrowRight from '../icons/ArrowRight.astro';

type Props = { project: CollectionEntry<'projects'>; class?: string; headingLevel?: 'h2' | 'h3' };

const { project, class: className, headingLevel = 'h2' } = Astro.props;
const { title, description } = project.data;
const TitleTag = headingLevel;
---

<div class="container mx-auto px-4">
  <div
    class="bg-[#b3b6b7] dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-2xl shadow-md p-6 transition hover:shadow-lg"
  >
    <a
      class:list={['flex flex-col sm:flex-row justify-between items-start gap-6 group', className]}
      href={`/projects/${project.id}/`}
    >
      <div class="grow">
        <TitleTag
          class="text-xl leading-tight font-sans font-medium sm:text-2xl group-hover:underline"
        >
          {title}
        </TitleTag>
        {description && (
          <div class="mt-2 text-sm leading-normal text-black dark:text-gray-200">
            {description}
          </div>
        )}
      </div>
      <div
        class="hidden font-sans opacity-0 transition group-hover:opacity-100 sm:inline-flex sm:gap-1 sm:items-center sm:shrink-0 hover:underline text-black dark:text-white"
      >
        Ver proyecto <ArrowRight class="fill-current w-4 h-4" />
      </div>
    </a>
  </div>
</div>

