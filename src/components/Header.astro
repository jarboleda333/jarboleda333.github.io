---
import siteConfig from '../data/site-config';
---

<header class="w-full max-w-6xl mx-auto mb-12 sm:mb-16 px-4">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <!-- Logo o Título -->
    <div>
      {siteConfig.logo && siteConfig.logo?.src ? (
        <a href="/">
          <img src={siteConfig.logo.src} alt={siteConfig.logo.alt || ''} class="max-h-12" />
        </a>
      ) : (
        <a class="font-serif text-2xl leading-tight font-medium text-theme-foreground sm:text-4xl" href="/">
          {siteConfig.title}
        </a>
      )}
      {siteConfig.subtitle && (
        <p class="text-sm leading-tight mt-1 text-gray-600 dark:text-gray-400">
          {siteConfig.subtitle}
        </p>
      )}
    </div>

    <!-- Navegación -->
    <nav class="flex gap-6 text-base sm:text-lg font-medium text-gray-800 dark:text-gray-100">
      {siteConfig.headerNavLinks?.map((link) => (
        <a
          href={link.href}
          class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200"
        >
          {link.text}
        </a>
      ))}
    </nav>
  </div>
</header>

